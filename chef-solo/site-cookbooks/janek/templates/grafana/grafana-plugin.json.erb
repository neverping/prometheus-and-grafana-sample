{
  "type": "datasource",
  "name": "Prometheus",
  "id": "prometheus",

  "includes": [
    {"type": "dashboard", "name": "Custom Apache Dashboard", "path": "dashboards/apache_dashboard.json"},
    {"type": "dashboard", "name": "Custom Prometheus Dashboard", "path": "dashboards/prometheus_dashboard.json"},
    {"type": "dashboard", "name": "Google's The Four Golden Signals", "path": "dashboards/google_the_four_golden_signals.json"},
    {"type": "dashboard", "name": "The RED method", "path": "dashboards/the_red_method.json"},
    {"type": "dashboard", "name": "The USE Method", "path": "dashboards/the_use_method.json"}
  ],

  "metrics": true,
  "alerting": true,
  "annotations": true,

  "queryOptions": {
    "minInterval": true
  },

  "info": {
    "description": "Prometheus Data Source for Grafana",
    "author": {
      "name": "Grafana Project",
      "url": "https://grafana.com"
    },
    "logos": {
      "small": "img/prometheus_logo.svg",
      "large": "img/prometheus_logo.svg"
    },
    "links": [
      {"name": "Prometheus", "url": "https://prometheus.io/"}
    ],
    "version": "5.0.0"
  }
}
